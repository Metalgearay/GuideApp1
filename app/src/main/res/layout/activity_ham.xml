<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.brett.guideapp.ham">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ham"
        android:gravity="start"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:text="Hamiliton"
        android:textSize="20sp"
        android:typeface="serif"
        android:textColor="#ff000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:typeface="serif"
        android:textColor="#ff000000"
        android:text= " Open to around 12 where the Secruity Guard will either kick you out or just check your idea"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:typeface="serif"
        android:textColor="#ff000000"
        android:text="Hamilton Hall is the headquarters of Columbia College, and as such holds the office of the College Dean, the Admissions Office and the office of the Core Curriculum. Hamilton is also home to a number of humanities departments, and is where many humanities classes, especially those in the Core Curriculum, are held. The building is named after famed Columbia dropout Alexander Hamilton."
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:id="@+id/textView5" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:typeface="serif"
        android:textColor="#ff000000"
        android:text="Pros: This makes it a great study place during finals but find a room early.
                      Cons: Elevator is very slow and there are mutiple floors"
        android:gravity="left"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
