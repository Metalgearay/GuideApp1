
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.brett.guideapp.havemayer"
    >

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/havemayer"
        android:gravity="start"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:text="Havemeyer Hall"
        android:textSize="20sp"
        android:typeface="serif"
        android:textColor="#ff000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:typeface="serif"
        android:textColor="#ff000000"
        android:text="
Attractions:
Room 309, a huge lecture hall that is the building's centerpiece, is famous for being featured in a number of films.
Havemeyer's exterior makes an appearance in the opening scenes of Ghostbusters, with a plaque identifying it as the fictitious Weaver Hall"
        android:id="@+id/textView3"
        android:gravity="center"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:typeface="serif"
        android:textColor="#ff000000"
        android:text="Havemeyer Hall is the home of the Chemistry Department. Research done here has led to seven Nobel Prizes. The first was awarded in 1934 to Harold Clayton Urey, whose research in Havemeyer led to the discovery of deuterium in 1931. "
        android:id="@+id/textView2"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
