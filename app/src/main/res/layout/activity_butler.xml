<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.brett.guideapp.noco"
    >

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/lib"
        android:gravity="start"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:text="Butler Library"
        android:textSize="20sp"
        android:typeface="serif"
        android:textColor="#ff000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:typeface="serif"
        android:textColor="#ff000000"
        android:text= " Open 24 Hours"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:typeface="serif"
        android:textColor="#ff000000"
        android:text="Butler Library houses two million volumes comprising the University's collections in the humanities, with particular strengths in history (including government documents and social science materials published before 1974), literature, philosophy and religion, as well as one of the country's most extensive collections of materials pertinent to the study of Greco-Roman antiquity
        "
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:id="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:typeface="serif"
        android:textColor="#ff000000"
        android:text="Butler Cafe is open till 2 most weekdays but closes early weekends"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:typeface="serif"
        android:textColor="#ff000000"
        android:text="Pros: Very Quiet Study Spaces most of the time                                              Cons: Very hetic during midterm and final seasons"
        android:layout_alignParentBottom="true"
        android:gravity="left"
        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp"
         />


    </RelativeLayout>